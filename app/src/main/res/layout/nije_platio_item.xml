<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/titelCoach"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dusan Poticvvvv"/>

                <View
                    android:layout_margin="5dp"
                    android:id="@+id/separator"
                    android:layout_below="@id/placanjaTitle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/nijePlatioIme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aleksandar Mitrovic  (2001/2)" />

            <RelativeLayout
                android:id="@+id/sendMessageHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/posaljiSmsCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="posalji SMS"
                    ></com.google.android.material.checkbox.MaterialCheckBox>

            </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>